
public class SquarePyramid extends Shape3D {
	// initialize fields
	// edge of square pyramid
	private double edge;
	// square object
	private Square square = new Square(edge);

	// constructor method
	public SquarePyramid(double edge) {
		this.edge = edge;
		square.setEdge(edge);
	}

	// getter and setter methods
	public double getEdge() {
		return edge;
	}

	public void setEdge(double edge) {
		this.edge = edge;
	}

	public Square getSquare() {
		return square;
	}

	public void setSquare(Square square) {
		this.square = square;
	}

	public double calculateVolume(double edge) {
		// volume of square pyramid = square area * edge / 3
		return square.calculateArea(edge) * edge / 3;
	}
}
