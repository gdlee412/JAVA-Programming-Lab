import java.util.Scanner;

public class Student {
	
	public String studentName;
	public String studentDepartment;
	public int studentBirthYear;
	public float cumulativeGPA;

	public void studentInfo(){	
		
		Scanner scan = new Scanner(System.in);
		
		System.out.print("Enter your name: ");
		studentName = scan.nextLine();
		System.out.print("Enter your date of birth: ");
		studentBirthYear = scan.nextInt();
		System.out.print("Enter your cumulative GPA: ");
		cumulativeGPA = scan.nextFloat();
		System.out.print("Enter your department: ");
		studentDepartment = scan.nextLine();
	}
}